{
  "name": "js2htmlstr",
  "version": "1.2.0",
  "description": "collection of JS functions that generate HTML strings",
  "author": "R. Mark Volkmann",
  "license": "MIT",
  "keywords": [
    "HTML",
    "JavaScript",
    "string"
  ],
  "main": "src/js2htmlstr.js",
  "type": "module",
  "scripts": {
    "build": "mkdir dist && cp src/js2htmlstr.js dist",
    "check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "format": "prettier --write '**/*.{css,html,js,ts,tsx}'",
    "minify": "terser src/js2htmlstr.js -o dist/js2htmlstr.min.js",
    "prepublishOnly": "npm run build && npm run minify",
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "test": "bun --watch test"
  },
  "devDependencies": {
    "@types/bun": "^1.0.0",
    "terser": "^5.27.2",
    "typescript": "^5.3.3"
  }
}
